{{#if userController.isAdminLoggedIn}}
    <div class="wrap" style="margin-top: 25px;">
        <div class="row" style="height: 100%;">
            <div class="col-sm-12 col-md-4">
              {{#if showNewCategoryField}}
                  <table class="table">
                      <tr>
                          <th colspan="2" class="tableHeader">Add new Category</th>
                      </tr>
                      <tr>
                          <td colspan="2">{{input type="text" valueBinding="newCategoryName" classNames="form-control" placeholder="Category Name"}}</td>
                      </tr>
                      <tr>
                          <td><button class="btn btn-primary form-control" style="margin-right: 10px;" {{action "saveNewCategory"}}>Add Category</button></td>
                          <td><button class="btn btn-default form-control" {{action "cancelNewCategory"}}>Cancel</button></td>
                      </tr>
                  </table>
              {{else}}
                  <button class="btn btn-default form-control" {{action "showNewCategory"}}>Add Category</button>
              {{/if}}

              {{#if domainHaveUpload}}
                {{#if showUploadField}}
                    <table class="table">
                        <tr>
                            <th colspan="2" class="tableHeader">Upload File</th>
                        </tr>
                        <tr>
                            <td colspan="2">
                              {{file-upload name="files[]" dataUrl=userController.domain.uploadUrl reloadCategories="reloadCategories"}}
                                <div id="progress">
                                    <div id="progressText" style="float: left;"></div>
                                    <div class="bar" style="width: 0%;"></div>

                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td><button class="btn btn-primary form-control" id="uploadFileButton" style="margin-right: 10px;">Upload</button></td>
                            <td><button class="btn btn-default form-control" {{action "cancelFileUpload"}}>Cancel</button></td>
                        </tr>
                    </table>
                {{else}}
                    <button class="btn btn-default form-control" {{action "showFileUpload"}}>Upload File</button>
                {{/if}}
              {{/if}}

                <div style="margin-bottom: 10px;">
                </div>

              {{#each sortedCategories as |category|}}
                {{menu-category
                    category=category
                    subcategories=subcategories
                    selectedCategory=categoryController.model.category
                    selectedSubcategory=subcategoryController.model
                    selectCategory="selectCategory"
                    selectSubcategory="selectSubcategory"
                    createSubcateogry="createSubcateogry"
                    renameSubcategory="renameSubcategory"
                    deleteSubcategory="deleteSubcategory"
                    copySubcategory="copySubcategory"
                }}
              {{/each}}


            </div>
            <div class="col-sm-12 col-md-8" style="height: 100%">
              {{outlet}}
            </div>
        </div>
    </div>
{{else}}
    <div class="wrap" style="margin-top: 25px;">
      {{log-in uuidAdminToken=userController.uuidAdminToken}}
    </div>
{{/if}}